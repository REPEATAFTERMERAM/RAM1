  <input type="password" id="key">
  <br><br>
  <button onclick="checkKey()">ENTER</button>

  <script>
    function checkKey() {
      const correctKey = "parrot";
      const input = document.getElementById("key").value;

      if (input === correctKey) {
        window.location.href = "secret.html";
      } else {
        alert("Wrong key.");
      }
    }
  </script>

